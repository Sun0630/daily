<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/remark_border"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="预约项目"
            android:textColor="#2BD78B"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/ll_reservation_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_reservatin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/iv_check_item"
                android:checked="false"
                android:paddingLeft="@dimen/ky_dimen_dp_16"
                android:text="中医特色疗法"
                android:textColor="@color/text_color_555555"
                android:textSize="@dimen/default_text_size_19"/>

            <CheckBox
                android:id="@+id/cb_reservatin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/iv_check_item"
                android:checked="false"
                android:paddingLeft="@dimen/ky_dimen_dp_16"
                android:text="中医特色"
                android:textColor="@color/text_color_555555"
                android:textSize="@dimen/default_text_size_19"/>

            <CheckBox
                android:id="@+id/cb_reservatin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/iv_check_item"
                android:checked="false"
                android:paddingLeft="@dimen/ky_dimen_dp_16"
                android:text="中医疗法"
                android:textColor="@color/text_color_555555"
                android:textSize="@dimen/default_text_size_19"/>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_reservation_container"
            android:layout_marginTop="40dp"
            android:background="#d9d9d9"/>


        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:text="完成"
            android:textColor="#2BD78B"
            android:textSize="20sp"/>


    </RelativeLayout>

</LinearLayout>